{
    "extends": "../../tsconfig.json",
    "include": [
        "**/*.ts",
        "views/*.ejs"
    ],
    "exclude": [
        "node_modules",
        "build"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": ".",
        "outDir": "build/",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "tsBuildInfoFile": "./.tsbuildinfo",
        "paths": {
            "controllers/*": [
                "Controllers/*"
            ],
            "presenters": [
                "Presenters/*"
            ]
        },
        "plugins": [
            {
                "name": "@rollup/plugin-json"
            },
            {
                "name": "@rollup/plugin-typescript"
            }
        ]
    },
    "references": [
        {
            "path": "../webapi.core"
        },
        {
            "path": "../infrastructure"
        }
    ]
}