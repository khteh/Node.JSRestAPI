{
    "extends": "../../tsconfig.json",
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "build/**/*",
        "node_modules"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": ".",
        "module": "ES2020",
        "target": "ES2020",
        "moduleResolution": "node",
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "incremental": true,        
        "outDir": "build/",
        "sourceMap": true,
        "plugins": [
            {
                "name": "@rollup/plugin-typescript"
            }
        ]
    },
    "references": [
        {
            "path": "../core"
        }
    ]
}