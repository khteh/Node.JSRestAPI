{
    "extends": "../../tsconfig.json",
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "build",
        "node_modules"
    ],
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "baseUrl": ".",
        "rootDir": ".",
        "outDir": "build/",
        "esModuleInterop": true,
        "plugins": [
            {
                "name": "@rollup/plugin-typescript"
            },
            {
                "name": "@rollup/plugin-json"
            }
        ]
    },
    "references": [
        {
            "path": "../webapi.core"
        }
    ]
}