{
  "name": "node.jsrestapi",
  "version": "1.0.0",
  "private": true,
  "exports": "./bin/www.js",
  "type": "module",
  "scripts": {
    "graph": "nx graph",
    "build": "npx tsc",
    "lint": "eslint --ext .js --ignore-path .gitignore ./",
    "dev": "./node_modules/.bin/nodemon --trace-deprecation --ignore node_modules/ bin/www.js",
    "dev_ts": "export NODE_ENV=dev&& concurrently \"npx tsc --watch\" \"nodemon -q build/index.js\"",
    "start": "export NODE_ENV=dev&& node bin/www.js",
    "start_ts": "export NODE_ENV=dev&& node build/index.js",
    "test": "export NODE_ENV=test&& ./node_modules/.bin/mocha tests --timeout 10000 --recursive --check-leaks --exit --reporter mocha-junit-reporter --reporter-options mochaFile=test_reports/mocha/test-results.xml",
    "test_ts": "export NODE_ENV=test&& ./node_modules/.bin/mocha -r ts-node/register tests/**/*.ts --timeout 10000 --recursive --check-leaks --exit --reporter mocha-junit-reporter --reporter-options mochaFile=test_reports/mocha/test-results.xml",
    "cover": "./node_modules/.bin/nyc --reporter=lcov --reporter=text --reporter=text-summary --reporter=html npm test",
    "sonarqube": "./node_modules/.bin/mocha --reporter mocha-sonarqube-reporter tests --reporter-options output=test_reports/sonarqube/test_results.xml"
  },
  "dependencies": {
    "ansi-regex": "^6.0.1",
    "async": "^3.2.4",
    "compression": "^1.7.4",
    "config": "^3.3.7",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "debug": "~4.3.1",
    "ejs": "~3.1.6",
    "email-validator": "^2.0.4",
    "express": "^4.18.1",
    "helmet": "^5.1.1",
    "http-errors": "~2.0.0",
    "morgan": "^1.10.0",
    "mysql2": "^2.3.3",
    "spdy": "^4.0.2"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.18.9",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "concurrently": "^7.3.0",
    "eslint": "^8.21.0",
    "mocha": "^10.0.0",
    "mocha-junit-reporter": "^2.0.2",
    "mocha-sonarqube-reporter": "^1.0.2",
    "nodemon": "^2.0.19",
    "nx": "^14.5.4",
    "nyc": "^15.1.0",
    "sonarqube-scanner": "^2.8.1",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  },
  "workspaces": [
    "src/core",
    "src/infrastructure",
    "src/webapi"
  ]
}
