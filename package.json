{
  "name": "node.jsrestapi",
  "version": "1.0.0",
  "private": true,
  "exports": "./src/webapi/server.ts",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/khteh/Node.JSRestAPI.git"
  },
  "scripts": {
    "graph": "nx graph",
    "typeorm": "typeorm-ts-node-esm",
    "run_migration": "npx typeorm-ts-node-esm migration:run",
    "clean": "tsc --build --clean && rimraf build src/core/build src/infrastructure/build src/webapi/build",
    "copy-assets": "ts-node --esm tools/copyAssets.ts",
    "build": "npx tsc",
    "build_core": "npm run build --workspace=core",
    "build_infra": "npm run build --workspace=infrastructure",
    "build_webapi": "npm run build --workspace=webapi",
    "build_all": "npm-run-all clean build_core build_infra build_webapi build copy-assets",
    "lint": "eslint --ext .js --ignore-path .gitignore ./",
    "dev": "export NODE_ENV=dev&& concurrently \"npx tsc --watch\" \"nodemon -q build/src/webapi/server.js\"",
    "start": "export NODE_ENV=dev&& node --experimental-specifier-resolution=node build/src/webapi/server.js",
    "test": "export NODE_ENV=test&& ./node_modules/.bin/mocha -r ts-node/register tests/**/*.ts --timeout 10000 --recursive --check-leaks --exit",
    "ts_test": "export NODE_ENV=test && ./node_modules/.bin/nyc --timeout 10000 --recursive --check-leaks --reporter=lcov --reporter=text --reporter=text-summary --reporter=html ./node_modules/.bin/mocha -r ts-node/register tests/**/*.ts --reporter mocha-junit-reporter --reporter-options mochaFile=test_reports/mocha/test-results.xml --exit",
    "cover": "./node_modules/.bin/nyc --reporter=lcov --reporter=text --reporter=text-summary --reporter=html npm test",
    "sonarqube": "./node_modules/.bin/mocha --reporter mocha-sonarqube-reporter tests --reporter-options output=test_reports/sonarqube/test_results.xml"
  },
  "dependencies": {
    "@types/morgan": "^1.9.4",
    "ansi-regex": "^6.0.1",
    "async": "^3.2.4",
    "compression": "^1.7.4",
    "config": "^3.3.8",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "debug": "~4.3.1",
    "ejs": "~3.1.6",
    "email-validator": "^2.0.4",
    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "http-errors": "~2.0.0",
    "morgan": "^1.10.0",
    "morgan-json": "^1.1.0",
    "pg": "^8.8.0",
    "spdy": "^4.0.2"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.19.1",
    "@babel/plugin-syntax-import-assertions": "^7.20.0",
    "@types/async": "^3.2.16",
    "@types/chai-as-promised": "^7.1.5",
    "@types/jest": "^29.2.5",
    "@types/mocha": "^10.0.1",
    "@types/morgan-json": "^1.1.0",
    "@types/shelljs": "^0.8.11",
    "@types/sinon": "^10.0.13",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.3.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.30.0",
    "fs-extra": "^11.1.0",
    "mocha": "^10.2.0",
    "mocha-junit-reporter": "^2.2.0",
    "mocha-sonarqube-reporter": "^1.0.2",
    "module-name": "^0.0.1-security",
    "moq.ts": "^10.0.2",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "nx": "^15.3.3",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.5",
    "sonarqube-scanner": "^2.9.1",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.0",
    "typescript": "^4.9.4"
  },
  "workspaces": [
    "src/core",
    "src/infrastructure",
    "src/webapi"
  ]
}
